<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/brew_buddy_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:text="Welcome to BrewBuddy"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/search_breweries"
        android:layout_width="243dp"
        android:layout_height="66dp"
        android:layout_marginTop="92dp"
        android:layout_marginBottom="66dp"
        android:text="Search for Breweries!"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/deleteBreweryButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/viewFavoritesButton"
        android:layout_width="145dp"
        android:layout_height="56dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="79dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="94dp"
        android:onClick="viewFavorites"
        android:text="View Favorites"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/deleteBreweryButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_breweries" />

    <Button
        android:id="@+id/deleteBreweryButton"
        android:layout_width="131dp"
        android:layout_height="58dp"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="92dp"
        android:onClick="deleteButton"
        android:text="Delete Brewery"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/viewFavoritesButton"
        app:layout_constraintTop_toTopOf="@+id/viewFavoritesButton"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="352dp"
        android:layout_height="233dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/brew_buddy_title"
        app:srcCompat="@drawable/brewbuddy_img" />

</androidx.constraintlayout.widget.ConstraintLayout>